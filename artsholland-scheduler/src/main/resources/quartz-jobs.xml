    <trigger>
      <cron>
        <name>GeoNamesEnricherTrigger</name>
        <group>EnricherService</group>        
        <job-name>EnrichObjects</job-name>
        <job-data-map>
          <entry>
            <key>enricherClass</key>
            <value>org.waag.ah.tinkerpop.enrich.GeoNamesEnricher</value>
          </entry>
          <entry>
            <key>objectUri</key>
            <value>http://purl.org/artsholland/1.0/Venue</value>
          </entry>
          <entry>
            <key>includeProperties</key>
            <value>
              http://www.w3.org/2003/01/geo/wgs84_pos#lat,
              http://www.w3.org/2003/01/geo/wgs84_pos#long
            </value>
          </entry>
          <entry>
            <key>excludeProperties</key>
            <value>http://www.geonames.org/ontology#Feature</value>
          </entry>
        </job-data-map>
        <misfire-instruction>MISFIRE_INSTRUCTION_DO_NOTHING</misfire-instruction>
        <cron-expression>0 0/5 * * * ?</cron-expression>
        <time-zone>Europe/Amsterdam</time-zone>
      </cron>
    </trigger>
		
  </schedule>
