<?php

function wsviews_init() {
  module_load_include('inc', 'wsviews', 'includes/admin');
}

function wsviews_views_api() {
  return array(
    'api' => '3.0',
    'path' => drupal_get_path('module', 'wsviews'),
  );
}

function wsviews_ctools_plugin_directory($module, $plugin) {
  if ($module == 'views_ui' && $plugin == 'views_wizard') {
    return 'plugins/views_wizard';
  }
}